{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "name": "project"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title_FR": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "title_EN": {
      "type": "string",
      "required": true,
      "minLength": 1
    },
    "subTitle_FR": {
      "type": "text",
      "minLength": 1,
      "required": true
    },
    "subTitle_EN": {
      "type": "text",
      "minLength": 1,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "show",
        "collab",
        "street-show"
      ]
    },
    "coverPicture": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "paragraphs": {
      "type": "dynamiczone",
      "components": [
        "editorial.paragraph"
      ]
    }
  }
}
